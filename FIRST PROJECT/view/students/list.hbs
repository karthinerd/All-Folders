<div class="form">

<h1> Students List </h1>

<table align="center">

    <thead>

        <tr>

            <th> Name </th>
            <th> Date of Birth </th>
            <th> Email </th>
            <th> Mobile </th>
            <th></th>

        </tr>

    </thead>

    <tbody>

        {{#each list}}

        <tr>

            <td>{{this.Name}}</td>
            <td>{{this.Dob}}</td>
            <td>{{this.emailid}}</td>
            <td>{{this.Mobile}}</td>

            <td>

                <a href="/student/{{this._id}}"> <button class="edit"> Edit </button> </a>

                <a href="/student/delete/{{this._id}} "> <button class="delete" onclick="return confirm('Are You Sure to Delete This Record')"> delete </button> </a>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>

<a href="/student"> <button class="new"> Create New + </button> </a>

</div>